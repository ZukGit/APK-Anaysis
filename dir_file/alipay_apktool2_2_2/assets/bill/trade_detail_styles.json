{
	".status-box": {
    	"width": "fill_parent",
    	"height": "fill_parent",
    	"gravity": "center",
    	"padding": "14dp 14dp 6dp 14dp"
	},
	
	".status-logo" : {
        "margin": "0 6dp 0 0",
        "width": "23dp",
        "height": "23dp",
        "visibility": "none"
	},
	
	".status-text" : {
		"width": "wrap_content",
		"height": "wrap_content",
		"textSize": "26sp",
		"textColor": "#333333"
	},
	
	".right-arrow": {
		"width": "16dp",
		"height": "16dp",
		"layout_gravity": "right|center_vertical",
		"margin": "0 8dp 0 0dp",
		"src": "@drawable/bill_list_arrow_right",
		"visibility": "none"
	},
	
	".title-box": {
		"width": "fill_parent",
		"height": "wrap_content",
		"padding": "8dp 20dp 14dp 0"
	},
	
	".title-icon": {
		"width": "60dp",
		"height": "60dp",
		"margin": "0dp 15dp 0 0",
		"scaleType": "fitXY",
		"background": "@drawable/trade_detail_title_logo_bg"
	},
	
	".title-text": {
		"width": "fill_parent",
		"height": "wrap_content",
		"textColor": "#666666",
		"padding": "0 0 0 0dp",
		"textSize": "16sp",
		"gravity": "top|left",
		"layout_gravity":"top|left"
	},
	
	".shipinfo-seperator-line": {
		"width": "200dp",
		"height": "wrap_content",
		"gravity": "center"
	},
	
	".shipinfo-side-line": {
		"width": "fill_parent",
		"height": "1px",
		"margin": "0 6dp 0 0",
		"weight": "1",
		"background": "@color/#cccccc"
	},
	
	".top-line-logo": {
		"width": "16dp",
		"height": "10dp",
		"scaleType": "fitXY",
		"src": "@drawable/trade_shipinfo_icon"
	},
	
	".shipinfo-box-layout": {
		"width": "fill_parent",
		"height": "wrap_content",
		"orientation": "vertical",
		"padding": "6dp 0 0dp 20dp",
		"margin": "0dp 0dp 0 0dp"
	},
	
	".shipinfo-box": {
		"width": "fill_parent",
		"height": "fill_parent",
		"margin": "0dp 12dp 6dp 0dp"
	},
	
	".shipinfo-vertical-box": {
		"width": "wrap_content",
		"height": "wrap_content",
		"margin": "0dp 20dp 6dp 0dp",
		"weight": "1",
		"orientation": "vertical"
	},
	
	".shipinfo-name": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"textColor": "#999999",		
		"margin": "6dp 0dp 0dp 0dp",
		"textSize": "16sp"
	},
	
	".shipinfo-text": {
		"width": "wrap_content",
		"height": "wrap_content",
		"singleLine": "true",
		"textColor": "#666666",		
		"textSize": "16sp",
		"margin": "6dp 0dp 0dp 0dp",
		"gravity": "center_vertical|left",
		"weight": "1",
		"ellipsize": "end"
	},
	
	".text-memo-value": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"textColor": "#666666",
		"textSize": "16sp",
		"margin": "6dp 20dp 6dp 0dp",
		"layout_gravity":"center_vertical|left"
	},
	
	".voiceinfo-box": {
		"width": "fill_parent",
		"height": "wrap_content",
		"padding": "6dp 0dp 6dp 0dp",
		"margin": "0dp 20dp 6dp 0dp"
	},
	
	".voice-button-box": {
		"width": "fill_parent",
		"height": "40dp",
		"padding": "6dp 0dp 6dp 0dp",
		"margin": "6dp 0dp 5dp 0dp",
		"textColor": "#666666"
	},
	
	".voice-img-time-box": {
		"width": "fill_parent",
		"height": "60dp",
		"textColor": "#666666",
		"margin": "0 0dp 0 0dp",
		"layout_gravity":"center"
	},
	
	".voice-time-value": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"textColor": "#666666",
		"textSize": "20sp",
		"padding": "6dp 20dp 0 0dp",
		"layout_gravity":"center",
		"gravity":"center"
	},
	
	".voice-memo-img": {
		"width": "fill_parent",
		"height": "50dp"
	},
	
	".line-box": {
		"width": "fill_parent",
		"height": "fill_parent",
		"padding": "6dp 0dp 0dp 20dp"
	},
	
	".tip-info-box": {
		"width": "fill_parent",
		"height": "wrap_content",
		"padding": "12dp 0dp 0dp 20dp"
	},
	
	".opposite-line-box": {
		"width": "fill_parent",
		"height": "40dp",
		"padding": "6dp 0dp 4dp 20dp"
	},
	
	".last-line-box": {
		"width": "fill_parent",
		"height": "fill_parent",
		"padding": "6dp 0dp 30dp 20dp"
	},
	
	".line-value-box": {
		"width": "fill_parent",
		"height": "wrap_content",
		"weight": "1",
		"orientation": "vertical"
	},
	
	".line-left-text": {
		"width": "80dp",
		"height": "wrap_content",
		"singleLine": "true",
		"textColor": "#999999",
		"textSize": "16sp",
		"gravity": "left"
	},
	
	".line-right-text": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"textColor": "#666666",
		"textSize": "16sp",
		"margin": "0dp 20dp 0 10dp",
		"textIsSelectable": "true"
	},
	
	".amount-box-layout": {
		"width": "fill_parent",
		"height": "wrap_content",
		"orientation": "vertical",
		"margin": "6dp 0dp 6dp 0dp",
		"padding": "6dp 0dp 0dp 20dp"
	},
	
	".amount-value-box": {
		"width": "fill_parent",
		"height": "wrap_content",
		"orientation": "horizontal",
		"layout_gravity":"right",
		"gravity":"right|bottom",
		"padding": "0dp 20dp 3dp 0dp"
	},
	
	".amount-fee": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"textColor": "#999999",
		"textSize": "16sp",
		"padding": "0dp 20dp 3dp 0dp",
		"layout_gravity":"right"
	},
	
	".subtitle-name": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"textColor": "#999999",		
		"margin": "6dp 0dp 0dp 0dp",
		"textSize": "16sp"
	},
	
	".integer-amount-value": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"textColor": "#333333",
		"textSize": "56sp",
		"layout_gravity":"right|bottom"
	},
	
	".decimal-amount-value": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"textColor": "#333333",
		"textSize": "30sp",
		"layout_gravity":"left|bottom"
	},
	
	".rechargeNo-value": {
		"width": "wrap_content",
		"height": "wrap_content",
		"textColor": "#666666",
		"textSize": "16sp",
		"margin": "6dp 0dp 7dp 0dp",
		"layout_gravity":"left"
	},
	
	".line-right-text-extra": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"singleLine": "true",
		"textColor": "#333333",
		"textSize": "15sp",
		"margin": "0 0 0 6dp",
		"visibility": "none"
	},
	
	".opposite-head-img": {
		"width": "32dp",
		"height": "32dp",
		"scaleType": "center",
		"layout_gravity": "center_vertical|left"
	},
	
	".opposite-name-value": {
		"width": "wrap_content",
		"height": "wrap_content", 
		"textColor": "#666666",
		"textSize": "16sp",
		"margin": "0 0 0 10dp",
		"layout_gravity":"center_vertical|right"
	},
		
	".seperator-box": {
		"width": "fill_parent",
		"height": "wrap_content",
		"orientation": "vertical",
		"padding": "2dp 0 0 0"
	},
	
	".refund-box-layout": {
		"width": "fill_parent",
		"height": "wrap_content",
		"orientation": "vertical",
		"padding": "10dp 0 0dp 20dp"
	},
	
	".refund-line-box": {
		"width": "fill_parent",
		"height": "fill_parent",
		"padding": "0dp 0dp 0dp 0dp",
		"margin": "0dp 0dp 6dp 0dp"
	},
	
	".full-line-seperator" : {
		"width" : "fill_parent",
		"height" : "1dp",
		"background" : "@drawable/trade_detail_full_line_seperator_bg"
	},
	
	".refund-full-line-seperator" : {
		"width" : "fill_parent",
		"margin": "6dp 0dp 0dp 0dp",
		"padding": "6dp 0dp 0dp 0dp",
		"height" : "1dp",
		"background" : "@drawable/trade_detail_full_line_seperator_bg"
	},
	
	".dash-line-seperator" : {
		"width" : "fill_parent",
		"height" : "1dp",
		"background" : "@drawable/trade_detail_dash_line_seperator_bg"
	}
}